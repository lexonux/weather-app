
<ScrollView 
    
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    
    <RelativeLayout 
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/countrySpinner"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Select country" />

    <Spinner
        android:id="@+id/countrySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
       />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/countrySpinner"
        android:layout_below="@+id/countrySpinner"
        android:layout_marginTop="28dp"
        android:text="Select city" />

    <Spinner
        android:id="@+id/citySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="30dp"
        android:background="#90909090" />

    <TextView
        android:id="@+id/temperatureTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/view1"
        android:layout_marginTop="24dp"
        android:text="Temperature..." />

    <TextView
        android:id="@+id/visibilityTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/relativeHumidityTv"
        android:layout_below="@+id/relativeHumidityTv"
        android:layout_marginTop="11dp"
        android:text="Visibility..." />

    <TextView
        android:id="@+id/relativeHumidityTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pressureTv"
        android:layout_below="@+id/pressureTv"
        android:layout_marginTop="11dp"
        android:text="Relative Humidity.." />

    <TextView
        android:id="@+id/pressureTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/citySpinner"
        android:layout_below="@+id/temperatureTv"
        android:layout_marginTop="11dp"
        android:text="Pressure..." />

    <TextView
        android:id="@+id/dewpointtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/visibilityTv"
        android:layout_alignRight="@+id/visibilityTv"
        android:layout_below="@+id/visibilityTv"
        android:layout_marginTop="11dp"
        android:text="Dew point..." />

    <TextView
        android:id="@+id/windtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeHumidityTv"
        android:layout_alignRight="@+id/dewpointtv"
        android:layout_below="@+id/dewpointtv"
        android:layout_marginTop="11dp"
        android:text="Wind..." />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/citySpinner"
        android:layout_alignTop="@+id/citySpinner"
        android:layout_marginTop="70dp"
        android:onClick="getWeather"
        android:text="Get weather" />

    <TextView
        android:id="@+id/locationtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/windtv"
        android:layout_below="@+id/windtv"
        android:layout_marginTop="11dp"
        android:text="Location..." />

</RelativeLayout>
    
    
    
</ScrollView>

